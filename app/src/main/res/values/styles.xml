<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Tema sin actionbar-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
    </style>

    <style name="ll_login_edittext">
        <item name="android:padding">@dimen/ll_login_edittext</item>
    </style>


    <!--Estilo boton -->
    <style name="Widget" parent="@android:style/Widget"/>
    <style name="Widget.Button" parent="@android:style/Widget.Button">
        <item name="android:color">@android:color/white</item>
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>
    <style name="Widget.Button.Transparent">
        <item name="android:background">@null</item>
    </style>

</resources>
